{
  "General": {
    "Mode": "Active",
    "Log_Level": "High",
    "Update_Interval": 60
  },
  "Detection": {
    "Enable_Anomaly_Detection": true,
    "Anomaly_Threshold": 0.8,
    "Enable_Signature_Detection": true,
    "Signature_DB": "signatures.db",
    "Machine_Learning_Model": "model.pkl"
  },
  "Monitoring": {
    "Monitor_Files": true,
    "Monitor_Processes": true,
    "Monitor_Syscalls": false,
    "Files2Watch": [
      "/etc/passwd",
      "/etc/shadow",
      "/etc/group",
      "/etc/gshadow",
      "/etc/sudoers",
      "/etc/hostname",
      "/etc/hosts",
      "/etc/resolv.conf",
      "/etc/profile",
      "/etc/bash.bashrc",
      "/etc/crontab",
      "/etc/hosts.allow",
      "/etc/hosts.deny",
      "/etc/ufw/ufw.conf"
    ],
    "Guest_File_Path": "/tmp/IDS-TFG/"
  },
  "Response": {
    "Enable_Alerting": true,
    "Alert_Email": "admin@seguridad.local",
    "Enable_Mitigation": true,
    "Kill_Suspicious_Processes": true
  },
  "Network": {
    "Interface": "red-central",
    "Filters": [
      {
        "protocol": "tcp",
        "ports": [22, 80, 443]
      },
      {
        "protocol": "udp",
        "port_range": [1000, 2000]
      },
      {
        "ip": "10.0.0.0/8",
        "protocol": "tcp",
        "ports": [23]
      }
    ]
  }
}

